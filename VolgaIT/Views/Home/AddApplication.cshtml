@model VolgaIT.Models.Application

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="~/Content/StyleSheet8.css">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="allblock">
            <div class="menu">
                <p class="cont">@Html.ActionLink("На главную", "GrandPage")</p>
                <p class="cont">@Html.ActionLink("Авторизация", "Login")</p>
                <p class="cont">@Html.ActionLink("Регистрация", "Registration")</p>
                <p class="cont">@Html.ActionLink("Список приложений", "ListApplication")</p>
                <p class="cont">@Html.ActionLink("Добавление приложения", "AddApplication")</p>
                <p class="cont">@Html.ActionLink("Выйти", "Exit")</p>
            </div>
            <div style="width: 30%;margin-top: 10px;">
                @using (Html.BeginForm("AddApplication", "Home", FormMethod.Post))
                {
                    <div class="form-horizontal">
                        <p style="font-size:25px">Создать приложение</p>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                @ViewBag.ErrorMessage
                            </div>
                        </div>
                        <p><input type="submit" value="Зайти" /></p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
