@model VolgaIT.Models.User_requests

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="~/Content/StyleSheet8.css">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="allblock">
            <div class="menu">
                <p class="cont">@Html.ActionLink("На главную", "GrandPage")</p>
                <p class="cont">@Html.ActionLink("Авторизация", "Login")</p>
                <p class="cont">@Html.ActionLink("Регистрация", "Registration")</p>
                <p class="cont">@Html.ActionLink("Список приложений", "ListApplication")</p>
                <p class="cont">@Html.ActionLink("Добавление приложения", "AddApplication")</p>
                <p class="cont">@Html.ActionLink("Выйти", "Exit")</p>
            </div>
            <div style=" width: 40%; text-align:center; font-size: 25px;">
                @using (Html.BeginForm("SendRequest", "Home", FormMethod.Post))
                {
                    @Html.EditorFor(model => model.Application_Id, new { htmlAttributes = new { type = "hidden" } });
                    <p>Дополнительные данные запроса</p>
                    @Html.EditorFor(model => model.Extra_data)
                    <p>Тип запроса</p>
                    @Html.DropDownList("Name", ViewBag.Requests as SelectList)
                    <p><input type="submit" value="send" /></p>
                    @ViewBag.Message
                }
                @Html.ActionLink("Назад", "ListApplication")
            </div>
        </div>
    </div>
</body>
</html> 