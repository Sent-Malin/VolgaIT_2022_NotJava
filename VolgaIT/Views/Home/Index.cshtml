@model VolgaIT.Models.User

@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link type="text/css" rel="stylesheet" href="~/Content/StyleSheet8.css">
</head>
<body>
    <div class="container">
        <div class="allblock">
            <div class="menu">
                <p class="cont">@Html.ActionLink("На главную", "GrandPage")</p>
                <p class="cont">@Html.ActionLink("Авторизация", "Login")</p>
                <p class="cont">@Html.ActionLink("Регистрация", "Registration")</p>
                @if (Model.Email.Length > 5)
                {
                    <p class="cont">@Html.ActionLink("Список приложений", "ListApplication")</p>
                    <p class="cont">@Html.ActionLink("Добавление приложения", "AddApplication")</p>
                    <p class="cont">@Html.ActionLink("Выйти", "Exit")</p>
                }
            </div>
            <div style=" width: 40%; text-align:center;">
                <div style="font-size: 45px;">
                    <p>@AppDomain.CurrentDomain.FriendlyName</p>
                    @if (Model.Email.Length > 3)
                    {
                        <p style="font-size: 25px;">Вы вошли как: @Model.Email</p>
                        <p style="font-size: 25px;">Создано приложений: @Model.CountApplication</p>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
